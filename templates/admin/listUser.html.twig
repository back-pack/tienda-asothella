{% extends 'base.html.twig' %}
{# /superadmin/user/list #}
{% block title %}Lista de usuarios{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ message }}
    </div>
    {% endfor %} {% for message in app.flashes('danger') %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ message }}
    </div>
    {% endfor %}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Usuarios
            </h1>
        </div>
    </div>
    <ol class="breadcrumb">
        <li>Tablero</li>
            <li>Usuarios</li>
            <li><a href="{{ path('superadmin_user_new') }}"><button type="button" class="btn btn-xs btn-success"><i class="fa fa-fw fa-plus"></i> Agregar</button></a></li>
    </ol>

    <div class="panel panel-default"> 
        <div class="panel-heading">Administraci√≥n de usuarios</div> 
        <table class="table">
            <tr>
                <th>Rol</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Usuario</th>
                <th width="110px"><i class="fa fa-cogs"></i></th>
            </tr>
            {% for user in users %}
            <tr>
                <td>{{ user.role }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.username }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('superadmin_user_edit', {'userId': user.id}) }}"><i class="fa fa-fw fa-pencil"></i></a>
                    <a class="btn btn-danger" href="{{ path('superadmin_user_delete', {'userId': user.id}) }}"><i class="fa fa-fw fa-remove"></i></a>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
