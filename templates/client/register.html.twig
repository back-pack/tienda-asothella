{% extends 'base.html.twig' %} 
{# /client/register #}
{% block title %}Asothella - Registración{% endblock %} {% block body %}
<div class="container">
    <div class="row">
        <div class="page-header">
            <h2>¡Bienvenido!
                <small> Para registrarse, complete los campos a continuación:</small>
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Registración:</h3>
            </div>
            <div class="panel-body">      
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate', 'onsubmit':'return validateRegistrationForm()' }}) }}
                <div class="form-group">
                    <label class="col-sm-2 control-label">Razón social</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.name, {'attr': {'placeholder': 'Ej. Mi Empresa S.A.'}}) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="nameError"></div>
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Correo electrónico</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.email, {'attr': {'placeholder': 'Ej. info@mi-empresa.com.ar'}}) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="emailError"></div>
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Dirección</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.address, {'attr': {'placeholder': 'Ej. Calle 123, Localidad, Partido, Provincia '}}) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="addressError"></div>
                    {{ form_errors(form.address) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Telefono</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.phone, {'attr': {'placeholder': 'Ej. 41230987'}}) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="phoneError"></div>
                    {{ form_errors(form.phone) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nombre de contacto</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.contactName, {'attr': {'placeholder': 'Ej. Hugo'}}) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="contactNameError"></div>
                    {{ form_errors(form.contactName) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Contraseña</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.plainPassword.first) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="passwordFirstError"></div>
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Repita la contraseña</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                    <div style="display:none;" class="alert alert-danger col-md-4" role="alert" id="passwordSecondError"></div>
                    {{ form_errors(form.plainPassword.second) }}
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-5">
                        {{ form_widget(form.save)}}
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('js/constraints.js') }}"></script>
{% endblock %}
{% endblock %}