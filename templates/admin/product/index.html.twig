{% extends 'base.html.twig' %}
{# /superadmin/product #}
{% block title %}Lista de productos{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ message }}
    </div>
    {% endfor %} {% for message in app.flashes('danger') %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ message }}
    </div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Productos
            </h1>
        </div>
    </div>
    <ol class="breadcrumb">
        <li>Tablero</li>
            <li class="active">Productos</li>
            <li><a href="{{ path('superadmin_product_new') }}"><button type="button" class="btn btn-xs btn-success"><i class="fa fa-fw fa-plus"></i> Agregar</button></a></li>
    </ol>
    

    {# Listado de productos #}

    <div class="row">   
        {% for product in products %}

            <div class="col-sm-6 col-md-4"> 
                <div class="thumbnail item_tienda">
                    <img src="{{ asset('uploads/productImages/' ~ product.attachment) }}" alt="...">
                    <div class="caption">
                        <h3>{{ product.name }}</h3>
                        <p>{{ product.description }}</p>
                        <p>$ {{ product.price }}</p>
                        <p>Color: {{ product.isColor ? 'Si' : 'No' }}</p>
                        <a href="{{ path('superadmin_product_edit', {'id': product.id}) }}"><button type="button" class="btn btn-sm btn-warning" data-toggle="tooltip" data-placement="bottom" title="Modificar"><i class="fa fa-fw fa-pencil"></i></button></a>
                        <a href="{{ path('superadmin_product_delete', {'id': product.id}) }}"><button type="button" class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="bottom" title="Borrar"><i class="fa fa-fw fa-remove"></i></button></a>
                    </div>
                </div>
            </div>
        
        {% else %}
            <div class="carro_vacio"><h5>¡No hay registros aún!</h5></div>
        {% endfor %}
    </div>    
{% endblock %}